# StreamFusion Environment Variables
# Copy this file to .env.local and fill in your values

# YouTube OAuth Configuration
VITE_YOUTUBE_CLIENT_ID=your-youtube-oauth-client-id
VITE_YOUTUBE_API_KEY=your-youtube-api-key

# Twitch OAuth Configuration  
VITE_TWITCH_CLIENT_ID=your-twitch-client-id

# Facebook OAuth Configuration
VITE_FACEBOOK_CLIENT_ID=your-facebook-app-id

# X (Twitter) OAuth Configuration
VITE_X_CLIENT_ID=your-x-oauth-client-id

# TURN Server Configuration (for production WebRTC)
VITE_TURN_USERNAME=your-turn-server-username
VITE_TURN_CREDENTIAL=your-turn-server-password

# Backend Service URLs (optional - defaults to localhost in development)
VITE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3001
VITE_SIGNALING_URL=ws://localhost:8081
VITE_STREAMING_URL=ws://localhost:8080/ws
